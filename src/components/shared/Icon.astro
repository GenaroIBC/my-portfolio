---
import type { IconName, IconSize } from "src/types";

export type TIcon = {
  name: IconName;
  size: IconSize;
};

export interface Props extends TIcon {}

const { size, name } = Astro.props;
---

<img
  src={`/svg/techs/${name}.svg`}
  class={`icon-${size}`}
  alt={`${name} icon`}
/>

<style>
  img {
    filter: brightness(0);
    transition: filter 0.4s ease-out;
  }

  img:hover {
    filter: brightness(1);
  }

  .icon-tiny {
    width: 1rem;
    height: 1rem;
  }

  .icon-small {
    width: 1.5rem;
    height: 1.5rem;
  }

  .icon-medium {
    width: 2rem;
    height: 2rem;
  }

  .icon-large {
    width: 2.5rem;
    height: 2.5rem;
  }

  .icon-huge {
    width: 3rem;
    height: 3rem;
  }
</style>
