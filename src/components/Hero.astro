  h1 {
    font-size: 7rem;
    margin: 1rem 0;
  }

  h2 {
    font-size: 1.8rem;
    opacity: 0.7;
  }
  .intro {
    display: block;

    opacity: 0.8;
    font-size: 1.2rem;
